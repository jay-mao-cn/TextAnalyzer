<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:TextAnalyzer.ViewModels"
        xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TextAnalyzer.DisplayChartWindow"
        Height="400" Width="600" x:DataType="vm:DisplayChartVM"
        Title="{Binding Title}" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <lvc:CartesianChart Series="{Binding Series}" XAxes="{Binding XAxes}"/>
    </Grid>
</Window>
