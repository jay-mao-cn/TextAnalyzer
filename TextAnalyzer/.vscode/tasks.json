{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/TextAnalyzer.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish x64",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/TextAnalyzer.csproj",
                "--runtime",
                "osx-x64",
                "/property:GenerateFullPaths=true;PublishSingleFile=true;SelfContained=true;PublishReadyToRun=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish arm64",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/TextAnalyzer.csproj",
                "--runtime",
                "osx-arm64",
                "/property:GenerateFullPaths=true;PublishSingleFile=true;SelfContained=true;PublishReadyToRun=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/TextAnalyzer.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}